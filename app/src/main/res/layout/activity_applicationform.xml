<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context=".ApplicationForm">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="25dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="167dp"
            android:layout_height="155dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/onekoneklogo" />

        <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textColor="#257FC6"
        android:text="Application Form"
        android:textStyle="bold"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="90dp"
        android:text="Please provide your basic information, location, and the plan you wish to subscribe to. If you agree to our Privacy Policy, please check the box below." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:text="Basic Information"
        android:textColor="#257FC6"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/corner_solidgray"
        android:hint="First Name *"
        android:padding="15dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#9C9B9B" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/corner_solidgray"
        android:hint="Last Name *"
        android:padding="15dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#9C9B9B" />

        <EditText
            android:id="@+id/mother"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Mother (Maiden Name) *"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#9C9B9B"
            android:background="@drawable/corner_solidgray"/>

    <EditText
        android:id="@+id/mobilenum"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Mobile Number *"
        android:padding="15dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#9C9B9B"
        android:background="@drawable/corner_solidgray"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Email *"
        android:padding="15dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#9C9B9B"
        android:background="@drawable/corner_solidgray"/>

        <EditText
            android:id="@+id/bday"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Birthday *"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#9C9B9B"
            android:background="@drawable/corner_solidgray"/>

        <TextView

            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="608dp"
            android:text="Address Details"
            android:textSize="25dp"
            android:textColor="#257FC6"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/house_num"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:drawablePadding="20dp"
            android:hint="Unit/House number, Street name,... *"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#9C9B9B" />

        <EditText
            android:id="@+id/brgy"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawablePadding="20dp"
            android:hint="Barangay *"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#9C9B9B"
            android:background="@drawable/corner_solidgray"/>



        <EditText
            android:id="@+id/city"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawablePadding="20dp"
            android:hint="City/Municipality *"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#9C9B9B"
            android:background="@drawable/corner_solidgray"/>


        <EditText
            android:id="@+id/zip"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Zip Code *"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#9C9B9B"
            android:background="@drawable/corner_solidgray"/>

        <EditText
            android:id="@+id/landmark"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Nearest Landmark *"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#9C9B9B"
            android:background="@drawable/corner_solidgray"/>

        <TextView

            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="212dp"
            android:text="Select Plan"
            android:textSize="25dp"
            android:textColor="#257FC6"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_solid_graylandpage">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Plan"
                    app:hintEnabled="true">

                <Spinner
                    android:id="@+id/spinner_languages"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>








    <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="271dp"
            android:layout_height="48dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="I agree in Privacy Policy, which I have read and understand."

            />

        <Button
            android:id="@+id/submit_application"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="16dp"
            android:text="SUBMIT APPLICATION"
            android:textColor="#FFFDFD"
            android:background="@drawable/corner_solidblue"
            android:onClick="OpenApplicationForm"/>

    </LinearLayout>


</ScrollView>

