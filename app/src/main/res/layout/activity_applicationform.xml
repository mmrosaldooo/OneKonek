<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context=".ApplicationForm">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="25dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="167dp"
            android:layout_height="155dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/onekoneklogo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="@string/application_form"
            android:textColor="#257FC6"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="90dp"
        android:text="@string/please_provide_your_basic_information_location_and_the_plan_you_wish_to_subscribe_to_if_you_agree_to_our_privacy_policy_please_check_the_box_below"
        tools:ignore="VisualLintLongText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:text="@string/basic_information"
        android:textColor="#257FC6"
        android:textSize="23sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/first_name"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/last_name"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/mother"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/mother_maiden_name"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/mobilenum"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/mobile_number"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/email"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/email"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/bday"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/birthday"
            android:padding="15dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <TextView

            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="608dp"
            android:text="@string/address_details"
            android:textSize="25sp"
            android:textColor="#257FC6"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/house_num"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:drawablePadding="20dp"
            android:hint="@string/unit_house_number_street_name"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/brgy"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:drawablePadding="20dp"
            android:hint="@string/barangay"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />


        <EditText
            android:id="@+id/city"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:drawablePadding="20dp"
            android:hint="@string/city_municipality"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />


        <EditText
            android:id="@+id/zip"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/zip_code"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/landmark"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/nearest_landmark"
            android:padding="20dp"
            android:textColor="#FFFDFD"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />

        <TextView

            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="212dp"
            android:text="@string/select_plan"
            android:textSize="25sp"
            android:textColor="#257FC6"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_solid_graylandpage"
                tools:ignore="UselessParent">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_plan2"
                    app:hintEnabled="true">

                <Spinner
                    android:id="@+id/spinner_languages"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="271dp"
            android:layout_height="48dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="@string/i_agree_in_privacy_policy_which_i_have_read_and_understand"

            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/submit_application"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="16dp"
            android:text="@string/submit_application"
            android:textColor="#FFFDFD"
            android:background="@drawable/corner_solidblue"
            android:onClick="OpenApplicationForm"
            tools:ignore="OnClick,UsingOnClickInXml" />

    </LinearLayout>


</ScrollView>

