<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payments">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:background="#0FFFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:gravity="center"
        android:text="Payments"
        android:textColor="#689F38"
        android:textSize="24dp"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />


    <ImageButton
        android:id="@+id/back3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#0fffffff"
        android:contentDescription="@string/app_name"
        android:onClick="OpenBack"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="ImageContrastCheck,UsingOnClickInXml" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Transactions"
        android:layout_marginVertical="85dp"
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="130dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/corner_solidgray">

            <TextView
                android:id="@+id/transac_amout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount *"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/transac_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Payment Date:"
                android:textColor="#455A64"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/transac_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Transaction Number:"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="260dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/corner_solidgray">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount *"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/upcoming_due_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Payment Date:"
                android:textColor="#455A64"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/account_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Transaction Number:"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="390dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/corner_solidgray"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/plan_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount *"
                android:textColor="#0277BD"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/upcoming_due_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Payment Date:"
                android:textColor="#455A64"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/account_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Transaction Number:"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


        </LinearLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        app:menu="@menu/navigation_items"
        tools:ignore="VisualLintBottomNav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>