<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/circle">

    <ImageButton
        android:id="@+id/backbutton_plans"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:textColorHint="@color/background_color"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="120dp"
        android:layout_marginStart="250dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="SUPER FAST"
        android:textColor="#141F59"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="150dp"
        android:layout_marginStart="200dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="INTERNET"
        android:textSize="30sp"
        android:textColor="#141F59"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="380dp"
        android:background="#ffffff">


        <Button
            android:id="@+id/checkavailability"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/corner_stroke_gray"
            android:backgroundTint="#00BCD4"
            android:text="plan 1"
            android:textSize="12sp"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintBounds" />


        <Button
            android:id="@+id/applynow"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/corner_stroke_gray"
            android:backgroundTint="#4CAF50"
            android:text="Plan 2"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintBounds" />

        <Button
            android:id="@+id/applicationstatus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/corner_stroke_gray"
            android:backgroundTint="#F44336"
            android:text="Plan 3"
            android:textSize="13sp"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintBounds" />

        <Button
            android:id="@+id/plans"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/corner_stroke_gray"
            android:backgroundTint="#FFEB3B"
            android:text="Plan 4"
            tools:ignore="ButtonStyle,HardcodedText,VisualLintBounds" />


    </LinearLayout>
</RelativeLayout>
