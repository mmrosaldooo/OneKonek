<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    tools:context=".Account_Settings">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:background="#0FFFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back3"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginVertical="15sp"
        android:layout_marginStart="10sp"
        android:backgroundTint="@color/background_color"
        android:contentDescription="@string/app_name"
        android:onClick="OpenHome_PageBack"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="OnClick" />


    <TextView
        android:id="@+id/imageView6"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="20sp"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="100sp"
        android:gravity="center"
        android:text="Account Settings"
        android:textColor="#3EBD26"
        android:textSize="23sp"/>
    
    
    <Switch
        android:id="@+id/switcher"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginStart="340sp"
        android:layout_marginTop="15sp"/>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginVertical="70sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150sp"
        android:layout_marginEnd="150sp"
        android:src="@drawable/ic_accsettings"
        />

    <TextView
        android:layout_width="197sp"
        android:layout_height="29sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="180sp"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="100sp"
        android:background="@drawable/corner_stroke_blue"
        android:gravity="center"
        android:text="123456789123"
        android:textSize="22sp" />

    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        app:srcCompat="@drawable/ic_accinfo"
        android:layout_marginVertical="230sp"
        android:layout_marginStart="28sp"
        android:layout_marginEnd="100sp"/>

    <TextView
        android:layout_width="311sp"
        android:layout_height="38sp"
        android:layout_marginVertical="235sp"
        android:layout_marginStart="75sp"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="455sp"
        android:text="Personal Info"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="161sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="270sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="29sp"
        android:background="@drawable/corner_solidgray"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"

            android:text="@string/fullname"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="1sp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:paddingTop="4sp"
            android:text="Email:"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="1sp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/mobilenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:paddingTop="2sp"
            android:text="mobile:"
            android:textSize="16sp"/>


    </LinearLayout>

    <ImageView

        android:layout_width="35sp"
        android:layout_height="35sp"
        app:srcCompat="@drawable/ic_billingadd"
        android:layout_marginVertical="460sp"
        android:layout_marginStart="28sp"
        android:layout_marginEnd="100sp"/>

    <TextView
        android:id="@+id/billing_address"
        android:layout_width="311sp"
        android:layout_height="38sp"
        android:layout_marginVertical="465sp"
        android:layout_marginStart="75sp"
        android:layout_marginEnd="60sp"
        android:text="Billing Address"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="520sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="29sp"
        android:background="@drawable/corner_solidgray"
        android:padding="12sp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="18sp" />


    </LinearLayout>

    <ImageView

        android:layout_width="35sp"
        android:layout_height="35sp"
        app:srcCompat="@drawable/ic_accpass"
        android:layout_marginVertical="610sp"
        android:layout_marginStart="28sp"
        android:layout_marginEnd="100sp"/>

    <TextView
        android:id="@+id/accpass"
        android:layout_width="311sp"
        android:layout_height="38sp"
        android:layout_marginVertical="618sp"
        android:layout_marginStart="75sp"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="455sp"
        android:text="Account Password"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_color"/>


    <ImageView
        android:id="@+id/editpass"
        android:layout_width="18sp"
        android:layout_height="18sp"
        app:srcCompat="@drawable/ic_edit"
        android:layout_marginVertical="620sp"
        android:layout_marginStart="235sp"
        android:layout_marginEnd="100sp"/>


</RelativeLayout>