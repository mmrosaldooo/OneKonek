<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context=".LoginPage">

    <ImageButton
        android:id="@+id/back2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/background_color"
        android:textColorHint="@color/background_color"
        android:contentDescription="@string/for_back_only"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        tools:ignore="ImageContrastCheck" />


    <ImageView
        android:layout_width="147dp"
        android:layout_height="132dp"
        android:layout_marginVertical="70dp"
        android:layout_marginStart="30dp"
        app:srcCompat="@drawable/onekoneklogo"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="311dp"
        android:layout_height="38dp"
        android:layout_marginVertical="230dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="455dp"
        android:text="@string/welcome_to_one_konek"
        android:textColor="#1975AE"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginVertical="275dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="377dp"
        android:text="@string/please_enter_your_13_digit_account_number_and_password_to_start_managing_your_subscription_or_click_apply_now_if_you_wish_to_subscribe"
        tools:ignore="VisualLintLongText" />

    <EditText
        android:id="@+id/acc_num"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="370dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/corner_stroke_black"
        android:backgroundTint="#D3D3D3"
        android:hint="@string/account_num"
        android:padding="20dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#455A64"
        tools:ignore="Autofill,TextFields" />


    <EditText
        android:id="@+id/pass"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="450dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/corner_stroke_black"
        android:backgroundTint="#D3D3D3"
        android:hint="@string/password"
        android:padding="20dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#455A64"
        tools:ignore="Autofill,TextFields" />

    <TextView
        android:id="@+id/forgetpass"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="520dp"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="193dp"
        android:text="@string/forgot_password"
        android:textColor="#1975AE"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="126dp"
        android:background="@drawable/corner_solidblue"
        tools:ignore="VisualLintButtonSize"
        android:text="@string/login"
        android:textColor="#F5F5F5" />


    <TextView
        android:id="@+id/new_to_one_konek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="94dp"
        android:text="@string/new_to_one_konek"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/applynow"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="225dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="94dp"
        android:text="@string/apply_now2"
        android:textColor="#1975AE"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />


</RelativeLayout>