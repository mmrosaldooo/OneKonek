<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context=".LoginPage">

    <ImageButton
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/white"
        android:contentDescription="for back only"
        app:srcCompat="@drawable/baseline_arrow_back_24" />


    <ImageView
        android:layout_width="147dp"
        android:layout_height="132dp"
        android:layout_marginVertical="70dp"
        android:layout_marginStart="30dp"
        app:srcCompat="@drawable/onekoneklogo" />

    <TextView
        android:layout_width="311dp"
        android:layout_height="38dp"
        android:layout_marginVertical="230dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="455dp"
        android:text="Welcome to One Konek"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="#1975AE"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginVertical="275dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="377dp"
        android:text="Please enter your 13 digit account number and password to start managing your subscription. Or click “Apply Now” if you wish to subscribe." />

    <EditText
        android:id="@+id/acc_num"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="370dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/corner_stroke_black"
        android:backgroundTint="#D3D3D3"
        android:hint="Account Number *"
        android:padding="20dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#9C9B9B"/>


    <EditText
        android:id="@+id/pass"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="450dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="#D3D3D3"
        android:hint="Password *"
        android:padding="20dp"
        android:textColor="#FFFDFD"
        android:textColorHint="#A1A0A0"
        android:background="@drawable/corner_stroke_black"/>

    <TextView
        android:id="@+id/forgetpass"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="520dp"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="193dp"
        android:text="Forgot Password?"
        android:textColor="#1975AE" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="126dp"
        android:text="LOGIN"
        android:background="@drawable/corner_solidblue" />


    <TextView
        android:id="@+id/new_to_one_konek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="94dp"
        android:text="New to One Konek?"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/applynow"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="225dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="94dp"
        android:text="  Apply Now"
        android:textColor="#1975AE"
        android:textStyle="bold" />


</RelativeLayout>